<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandD_smartPlanner.LoginPage"
             Title="LoginPage">
    <StackLayout Spacing="20" Padding="30">
        <Entry x:Name="UsernameEntry" Placeholder="Username" Text="{Binding Username}"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Text="{Binding Password}"/>
        <Button x:Name="LoginBtn" Text="Login" Clicked="OnLoginClicked"/>
        <Button x:Name="CreateUserBtn" Text="Create User" Clicked="OnCreateUserClicked"/>
        
    </StackLayout>
</ContentPage>