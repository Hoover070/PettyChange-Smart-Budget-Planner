<!-- BudgetListPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandD_smartPlanner.BudgetListPage">

    <StackLayout Padding="10">
        <Label Text="Select a Budget" 
               HorizontalOptions="Center" 
               FontAttributes="Bold"/>

        <ListView x:Name="BudgetsListView"
                  ItemsSource="{Binding Budgets}"
                  SelectedItem="{Binding SelectedBudget}"
                  HasUnevenRows="true"
                  IsPullToRefreshEnabled="true"
                  RefreshCommand="{Binding LoadBudgetsCommand}"
                  IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                  CachingStrategy="RecycleElement"
                  ItemSelected="OnBudgetSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding BudgetName}" Detail="{Binding BudgetSummary}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>