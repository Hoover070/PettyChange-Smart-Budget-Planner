<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandD_smartPlanner.WelcomePage">

    <StackLayout VerticalOptions="CenterAndExpand">
        <Label x:Name="WelcomeLabel" Text="Welcome" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
        <Button Text="New Budget" Clicked="OnCreateNewAccountClicked"/>
        <Label Text="Existing Budgets" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
        <ListView x:Name="BudgetListView" ItemTapped="OnBudgetSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding BudgetName}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </StackLayout>

</ContentPage>
